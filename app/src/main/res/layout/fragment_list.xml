    android:background="@color/yellow"
    android:padding="10dp">

    <TextView
        android:id="@+id/bebida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Nombre de la bebida"/>
