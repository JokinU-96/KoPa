        android:id="@+id/editarBebida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:text="Editar"
        android:textColor="#4B4B4B" />
    <Button
        android:id="@+id/anyadirBebida"
